\mode<presentation>

\definecolor{mrclightblue}{RGB}{234,239,243}
\definecolor{mrcblue}{RGB}{33,103, 126}
\definecolor{mrcorange}{RGB}{208,114,50}
\definecolor{mrcyellow}{RGB}{255,219,0}
\definecolor{mrcgreen}{RGB}{181,211,52}
\definecolor{mrcpurple}{RGB}{106,59,119}
\definecolor{mrcred}{RGB}{130,47,90} % "red"
\definecolor{mrcgray}{RGB}{138,121,103}

\setbeamercolor{background canvas}{bg=mrclightblue}
\setbeamercolor{boxtitles}{bg=white,fg=mrcblue}

\setbeamercolor{section}{fg=mrcorange}
\setbeamerfont{caption}{shape=\itshape,size=\normalsize}
\setbeamerfont{caption name}{shape=\itshape}
\setbeamercolor{caption name}{fg=black}

\setbeamerfont{itemize/enumerate subbody}{size=\normalsize}

\setbeamercolor{itemize subitem}{fg=black}
\setbeamercolor{enumerate subitem}{fg=black}
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{enumerate item}{fg=black}
\setbeamertemplate{itemize item}{\raisebox{-0.9ex}{\scalebox{3}{$\cdot$}}}

\setbeamertemplate{caption}[numbered]

\setbeamerfont{block title}{size={\fontsize{48}{54}}}
\setbeamerfont{block body}{size={\fontsize{32}{36}}}

%
% This fixes uneven block widths: see
% https://tex.stackexchange.com/questions/282920/block-title-and-body-misaligned
\setbeamertemplate{block begin}
{
  \par\vskip\medskipamount%
  \begin{beamercolorbox}[colsep*=2mm]{block title}
    \usebeamerfont*{block title}\insertblocktitle%
  \end{beamercolorbox}%
  {\parskip0pt\par}%
  \ifbeamercolorempty[bg]{block title}
  {}
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=2mm,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
}

%
% Add spacing and rules to blocks
\addtobeamertemplate{block begin}{
  \vskip \smallskipamount
}{
  \vspace{-12pt}

  \textcolor{lightgray}{\noindent\rule{\linewidth}{1pt}}

  \vspace{6pt}

}
\addtobeamertemplate{block end}{}{\vskip \bigskipamount}

\mode
<all>
